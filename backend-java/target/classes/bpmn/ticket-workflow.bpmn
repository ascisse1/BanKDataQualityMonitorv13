<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                   xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                   xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                   xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                   xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="Definitions_1"
                   targetNamespace="http://bpmn.io/schema/bpmn">

  <bpmn:process id="ticket-correction-process" name="Ticket Correction Workflow" isExecutable="true" camunda:historyTimeToLive="180">

    <bpmn:startEvent id="StartEvent_1" name="Anomaly Detected">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>

    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="Task_CreateTicket"/>

    <bpmn:serviceTask id="Task_CreateTicket" name="Create Ticket" camunda:delegateExpression="${createTicketDelegate}">
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_2" sourceRef="Task_CreateTicket" targetRef="Task_AssignTicket"/>

    <bpmn:serviceTask id="Task_AssignTicket" name="Assign to Agency User" camunda:delegateExpression="${assignTicketDelegate}">
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_3" sourceRef="Task_AssignTicket" targetRef="Task_AgencyCorrection"/>

    <bpmn:userTask id="Task_AgencyCorrection" name="Agency User Corrects Data" camunda:assignee="${assignedUserId}">
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:incoming>Flow_Rework</bpmn:incoming>
      <bpmn:outgoing>Flow_4</bpmn:outgoing>
    </bpmn:userTask>

    <bpmn:sequenceFlow id="Flow_4" sourceRef="Task_AgencyCorrection" targetRef="Task_RequestValidation"/>

    <bpmn:serviceTask id="Task_RequestValidation" name="Request Validation" camunda:delegateExpression="${requestValidationDelegate}">
      <bpmn:incoming>Flow_4</bpmn:incoming>
      <bpmn:outgoing>Flow_5</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_5" sourceRef="Task_RequestValidation" targetRef="Task_ValidateCorrection"/>

    <bpmn:userTask id="Task_ValidateCorrection" name="Supervisor Validates (4-Eyes)" camunda:candidateGroups="supervisors">
      <bpmn:incoming>Flow_5</bpmn:incoming>
      <bpmn:outgoing>Flow_6</bpmn:outgoing>
    </bpmn:userTask>

    <bpmn:sequenceFlow id="Flow_6" sourceRef="Task_ValidateCorrection" targetRef="Gateway_ValidationDecision"/>

    <bpmn:exclusiveGateway id="Gateway_ValidationDecision" name="Validation OK?">
      <bpmn:incoming>Flow_6</bpmn:incoming>
      <bpmn:outgoing>Flow_Approved</bpmn:outgoing>
      <bpmn:outgoing>Flow_Rejected</bpmn:outgoing>
    </bpmn:exclusiveGateway>

    <bpmn:sequenceFlow id="Flow_Approved" name="Approved" sourceRef="Gateway_ValidationDecision" targetRef="Task_TriggerRPA">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${validationApproved == true}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:sequenceFlow id="Flow_Rejected" name="Rejected" sourceRef="Gateway_ValidationDecision" targetRef="Task_NotifyRejection">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${validationApproved == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:serviceTask id="Task_NotifyRejection" name="Notify Rejection" camunda:delegateExpression="${notifyRejectionDelegate}">
      <bpmn:incoming>Flow_Rejected</bpmn:incoming>
      <bpmn:outgoing>Flow_Rework</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_Rework" sourceRef="Task_NotifyRejection" targetRef="Task_AgencyCorrection"/>

    <bpmn:serviceTask id="Task_TriggerRPA" name="Trigger RPA (UiPath)" camunda:delegateExpression="${triggerRpaDelegate}">
      <bpmn:incoming>Flow_Approved</bpmn:incoming>
      <bpmn:outgoing>Flow_7</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_7" sourceRef="Task_TriggerRPA" targetRef="Task_WaitRPACompletion"/>

    <bpmn:receiveTask id="Task_WaitRPACompletion" name="Wait for RPA Completion" messageRef="Message_RPACompleted">
      <bpmn:incoming>Flow_7</bpmn:incoming>
      <bpmn:outgoing>Flow_8</bpmn:outgoing>
    </bpmn:receiveTask>

    <bpmn:sequenceFlow id="Flow_8" sourceRef="Task_WaitRPACompletion" targetRef="Gateway_RPASuccess"/>

    <bpmn:exclusiveGateway id="Gateway_RPASuccess" name="RPA Success?">
      <bpmn:incoming>Flow_8</bpmn:incoming>
      <bpmn:outgoing>Flow_RPASuccess</bpmn:outgoing>
      <bpmn:outgoing>Flow_RPAFailed</bpmn:outgoing>
    </bpmn:exclusiveGateway>

    <bpmn:sequenceFlow id="Flow_RPASuccess" name="Success" sourceRef="Gateway_RPASuccess" targetRef="Task_CloseTicket">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${rpaSuccess == true}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:sequenceFlow id="Flow_RPAFailed" name="Failed" sourceRef="Gateway_RPASuccess" targetRef="Task_HandleRPAFailure">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${rpaSuccess == false}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>

    <bpmn:serviceTask id="Task_HandleRPAFailure" name="Handle RPA Failure" camunda:delegateExpression="${handleRpaFailureDelegate}">
      <bpmn:incoming>Flow_RPAFailed</bpmn:incoming>
      <bpmn:outgoing>Flow_9</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_9" sourceRef="Task_HandleRPAFailure" targetRef="EndEvent_RPAFailed"/>

    <bpmn:endEvent id="EndEvent_RPAFailed" name="RPA Failed - Manual Intervention Required">
      <bpmn:incoming>Flow_9</bpmn:incoming>
    </bpmn:endEvent>

    <bpmn:serviceTask id="Task_CloseTicket" name="Close Ticket" camunda:delegateExpression="${closeTicketDelegate}">
      <bpmn:incoming>Flow_RPASuccess</bpmn:incoming>
      <bpmn:outgoing>Flow_10</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_10" sourceRef="Task_CloseTicket" targetRef="Task_UpdateKPIs"/>

    <bpmn:serviceTask id="Task_UpdateKPIs" name="Update KPIs" camunda:delegateExpression="${updateKpisDelegate}">
      <bpmn:incoming>Flow_10</bpmn:incoming>
      <bpmn:outgoing>Flow_11</bpmn:outgoing>
    </bpmn:serviceTask>

    <bpmn:sequenceFlow id="Flow_11" sourceRef="Task_UpdateKPIs" targetRef="EndEvent_Success"/>

    <bpmn:endEvent id="EndEvent_Success" name="Ticket Closed Successfully">
      <bpmn:incoming>Flow_11</bpmn:incoming>
    </bpmn:endEvent>

  </bpmn:process>

  <bpmn:message id="Message_RPACompleted" name="RPA_COMPLETED"/>

</bpmn:definitions>
