<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- =====================================================
         RPA Jobs Tracking
         Based on actual MySQL schema from bank_data_quality_full.sql
         ===================================================== -->

    <changeSet id="003-01-create-rpa-jobs" author="bsic">
        <comment>Create RPA jobs tracking table</comment>
        <createTable tableName="rpa_jobs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="job_id" type="VARCHAR(255)">
                <constraints unique="true" uniqueConstraintName="UK_thf5l00ymnb04cn0loj5qxvmn" nullable="false"/>
            </column>
            <column name="ticket_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="process_instance_id" type="VARCHAR(255)"/>
            <column name="action" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="started_at" type="DATETIME(6)"/>
            <column name="completed_at" type="DATETIME(6)"/>
            <column name="error_message" type="TEXT"/>
            <column name="result_data" type="TEXT"/>
            <column name="retry_count" type="INT"/>
            <column name="created_at" type="DATETIME(6)"/>
            <column name="updated_at" type="DATETIME(6)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
