        "containerId": "bsic-bank",
        "attributes": {}
      },
      {
        "name": "AGENCY_USER",
        "description": "Agency user with CRUD for their agency anomalies",
        "composite": false,
        "clientRole": false,
        "containerId": "bsic-bank",
        "attributes": {}
      },
      {
        "name": "USER",
        "description": "Basic user with read access",
        "composite": false,
        "clientRole": false,
        "containerId": "bsic-bank",
        "attributes": {}
      }
    ]
  },
